                    .country__slide.swiper-slide
                        a.country__link(href="#")
                            != pugHelpers.Icon.call(locals, {iconName: 'country-ita', className: 'country__flag'})
                            .country__name Ita
                    .country__slide.swiper-slide
                        a.country__link(href="#")
                            != pugHelpers.Icon.call(locals, {iconName: 'country-deu', className: 'country__flag'})
                            .country__name Deu
                    .country__slide.swiper-slide
                        a.country__link(href="#")
                            != pugHelpers.Icon.call(locals, {iconName: 'country-and', className: 'country__flag'})
                            .country__name And
                    .country__slide.swiper-slide
                        a.country__link(href="#")
                            != pugHelpers.Icon.call(locals, {iconName: 'country-usa', className: 'country__flag'})
