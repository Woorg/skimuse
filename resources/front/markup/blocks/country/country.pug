mixin country(data)
    section.country&attributes(attributes)
        .country__container.container
            .country__top.flex
                h2.country__title.title Browse by country
                .country__buttons.flex
                    button.country__button.country__button_prev
                        != pugHelpers.Icon.call(locals, {iconName: 'arrow-slider', className: 'country__button-icon'})
                    button.country__button.country__button_next
                        != pugHelpers.Icon.call(locals, {iconName: 'arrow-slider', className: 'country__button-icon'})

            .country__slider.swiper-container
                .swiper-wrapper
                    .country__slide.swiper-slide
                        a.country__link(href="#")
                            != pugHelpers.Icon.call(locals, {iconName: 'country-aut', className: 'country__flag'})
                            .country__name Aut
                    .country__slide.swiper-slide
                        a.country__link(href="#")
                            != pugHelpers.Icon.call(locals, {iconName: 'country-fra', className: 'country__flag'})
